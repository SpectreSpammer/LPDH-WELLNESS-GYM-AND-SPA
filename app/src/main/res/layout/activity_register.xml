<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegisterActivity">

    <include
        android:id="@+id/aToolbar"
        layout="@layout/toolbar"></include>

    <TextView
        android:id="@+id/txt_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="133dp"
        android:text="Welcome to Wellness Gym and Spa"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_FirstName"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="24dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="17"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_auth" />

    <EditText
        android:id="@+id/txt_LastName"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="15"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_FirstName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_FirstName"
        app:layout_constraintTop_toBottomOf="@+id/txt_FirstName" />

    <EditText
        android:id="@+id/txt_address"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:ems="18"
        android:hint="Address"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_LastName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_LastName"
        app:layout_constraintTop_toBottomOf="@+id/txt_LastName" />


    <EditText
        android:id="@+id/txt_emailadd"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:ems="18"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/txt_address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_address"
        app:layout_constraintTop_toBottomOf="@+id/txt_address" />

    <Button
        android:id="@+id/btn_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="153dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_emailadd"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>